<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <!-- primary|extension Inherited .:Form:. view for "model" -->
    <record id="view_asset_car_form_inherited" model="ir.ui.view">
        <field name="name">view.asset_car.form_inherited</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form" />
        <field name="type">form</field>
        <!-- <field name="mode"></field> -->
        <field name="arch" type="xml">
          
          <xpath expr="//field[@name='name']" position="after">
                <group>
                  <!-- <label for="car_is" string="Car Is"/> -->
                  <field name="car_is"/>

                  <label for="vehicle_registration_expired" string="Vehicle Registration Expired" attrs="{'invisible':[('car_is','=',False)]}" />
                  <field name="vehicle_registration_expired"  attrs="{'invisible':[('car_is','=',False)]}" />

                  <label for="date_of_the_periodic_examination" string="Date Of The Periodic Examination" attrs="{'invisible':[('car_is','=',False)]}" />
                  <field name="date_of_the_periodic_examination" attrs="{'invisible':[('car_is','=',False)]}"/>

                  <label for="periodic_maintenance_history" string="Periodic Maintenance History" attrs="{'invisible':[('car_is','=',False)]}" />
                  <field name="periodic_maintenance_history" attrs="{'invisible':[('car_is','=',False)]}"/>     
                </group>
          </xpath>
          
           
        </field>
    </record>
    
   
  </data>
</odoo>